{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "name",
        "description",
        "system_prompt",
        "model",
        "plugins"
    ],
    "properties": {
        "name": {
            "type": "string",
            "description": "Name of the agent"
        },
        "description": {
            "type": "string",
            "description": "Description of what the agent does"
        },
        "system_prompt": {
            "type": "string",
            "description": "System prompt that defines the agent's behavior"
        },
        "model": {
            "type": "object",
            "required": [
                "provider",
                "name"
            ],
            "properties": {
                "provider": {
                    "type": "string",
                    "enum": [
                        "openai",
                        "azure",
                        "ollama"
                    ],
                    "description": "The AI model provider to use"
                },
                "name": {
                    "type": "string",
                    "description": "Name/ID of the model to use (e.g. gpt-4, gpt-3.5-turbo)"
                },
                "settings": {
                    "type": "object",
                    "description": "Optional provider-specific settings",
                    "properties": {
                        "temperature": {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 1
                        },
                        "max_tokens": {
                            "type": "integer",
                            "minimum": 1
                        }
                    }
                }
            }
        },
        "plugins": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "source"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name to use for the plugin when loaded"
                    },
                    "source": {
                        "type": "string",
                        "description": "GitHub repository URL or path to the plugin"
                    },
                    "version": {
                        "type": "string",
                        "description": "Version of the plugin to use (git tag or commit hash)"
                    },
                    "variables": {
                        "type": "object",
                        "description": "Plugin-specific configuration variables",
                        "additionalProperties": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}
