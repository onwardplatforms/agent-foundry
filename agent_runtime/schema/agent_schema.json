{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "name",
        "description",
        "system_prompt",
        "model",
        "plugins"
    ],
    "properties": {
        "name": {
            "type": "string",
            "description": "Name of the agent"
        },
        "description": {
            "type": "string",
            "description": "Description of what the agent does"
        },
        "system_prompt": {
            "type": "string",
            "description": "System prompt that defines the agent's behavior"
        },
        "model": {
            "type": "object",
            "required": [
                "provider",
                "name"
            ],
            "properties": {
                "provider": {
                    "type": "string",
                    "enum": [
                        "openai",
                        "azure",
                        "ollama"
                    ],
                    "description": "The AI model provider to use"
                },
                "name": {
                    "type": "string",
                    "description": "Name/ID of the model to use (e.g. gpt-4, gpt-3.5-turbo)"
                },
                "settings": {
                    "type": "object",
                    "description": "Optional provider-specific settings",
                    "properties": {
                        "temperature": {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 1
                        },
                        "max_tokens": {
                            "type": "integer",
                            "minimum": 1
                        }
                    }
                }
            }
        },
        "plugins": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "source"
                ],
                "properties": {
                    "source": {
                        "type": "string",
                        "description": "GitHub repository URL or path to the plugin",
                        "pattern": "^(https://github\\.com/[\\w-]+/[\\w-]+|github\\.com/[\\w-]+/[\\w-]+|[\\w/-]+)$"
                    },
                    "version": {
                        "type": "string",
                        "description": "Version of the plugin to use (git tag or commit hash). Cannot be used with branch."
                    },
                    "branch": {
                        "type": "string",
                        "description": "Branch to use for the plugin. Cannot be used with version. Defaults to 'main' if neither version nor branch is specified."
                    },
                    "variables": {
                        "type": "object",
                        "description": "Plugin-specific configuration variables",
                        "propertyNames": {
                            "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
                        },
                        "additionalProperties": {
                            "type": "string",
                            "pattern": "^\\$[A-Z_][A-Z0-9_]*$"
                        }
                    }
                },
                "allOf": [
                    {
                        "if": {
                            "properties": {
                                "source": {
                                    "pattern": "^(https://github\\.com/|github\\.com/)"
                                }
                            }
                        },
                        "then": {
                            "oneOf": [
                                {
                                    "required": [
                                        "version"
                                    ],
                                    "not": {
                                        "required": [
                                            "branch"
                                        ]
                                    }
                                },
                                {
                                    "required": [
                                        "branch"
                                    ],
                                    "not": {
                                        "required": [
                                            "version"
                                        ]
                                    }
                                },
                                {
                                    "not": {
                                        "anyOf": [
                                            {
                                                "required": [
                                                    "version"
                                                ]
                                            },
                                            {
                                                "required": [
                                                    "branch"
                                                ]
                                            }
                                        ]
                                    }
                                }
                            ]
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "source": {
                                    "not": {
                                        "pattern": "^(https://github\\.com/|github\\.com/)"
                                    }
                                }
                            }
                        },
                        "then": {
                            "not": {
                                "anyOf": [
                                    {
                                        "required": [
                                            "version"
                                        ]
                                    },
                                    {
                                        "required": [
                                            "branch"
                                        ]
                                    }
                                ]
                            }
                        }
                    }
                ]
            }
        }
    }
}